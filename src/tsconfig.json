{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "dom",
      "es6"
    ],
    "types": [
      "node"
    ],
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "outDir": "../out"
  },
  "files": [
    "ast.ts",
    "compiler.ts",
    "diagnosticMessages.generated.ts",
    "diagnostics.ts",
    "evaluator.ts",
    "glue/binaryen.d.ts",
    "glue/js.d.ts",
    "glue/js.ts",
    "index.ts",
    "module.ts",
    "parser.ts",
    "program.ts",
    "tokenizer.ts",
    "types.ts",
    "util.ts",
    "util/charcode.ts",
    "util/i64.ts",
    "util/path.ts"
  ],
  "assembly": {
    "exclude": [
      "glue/js.t.ts",
      "glue/js.ts"
    ],
    "include": [
      "glue/wasm.ts"
    ]
  }
}
