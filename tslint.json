{
  "extends": "./lib/lint",
  "defaultSeverity": "warning",
  "rules": {
    "as-internal-case": {},
    "as-internal-diagnostics": {},
    "indent": {
      "options": ["spaces", 2]
    },
    "max-line-length": {
      "options": [{
        "limit": 120,
        "ignore-pattern": " *DiagnosticCode\\.[^ ]+,$"
      }]
    },
    "member-access": {
      "options": ["no-public"]
    },
    "quotemark": {
      "options": ["double"]
    },
    "semicolon": {
      "options": ["always"]
    }
  },
  "jsRules": {
    "max-line-length": {
      "options": [{
        "limit": 120,
        "ignore-pattern": " *DiagnosticCode\\.[^ ]+,$"
      }]
    },
    "quotemark": {
      "options": ["double"]
    },
    "radix": {},
    "semicolon": {
      "options": ["always"]
    }
  }
}
